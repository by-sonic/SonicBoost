<Page
    x:Class="SonicBoost.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Dashboard"
    Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,24">
        <StackPanel MaxWidth="900">

            <!-- SonicVPN Banner -->
            <Border
                CornerRadius="12"
                Padding="24,16"
                Margin="0,0,0,24"
                Cursor="Hand"
                MouseLeftButtonUp="SonicVpnBanner_Click">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1A237E" Offset="0" />
                        <GradientStop Color="#00695C" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SonicVPN" FontSize="20" FontWeight="Bold" Foreground="#00E5FF" />
                        <TextBlock Text="Protect your gaming connection. Zero lag, maximum security." FontSize="13" Foreground="#B0BEC5" Margin="0,4,0,0" />
                    </StackPanel>
                    <ui:Button Grid.Column="1" Content="Get SonicVPN" Appearance="Primary" VerticalAlignment="Center" Click="SonicVpnButton_Click" />
                </Grid>
            </Border>

            <!-- Optimization Score -->
            <ui:CardControl Margin="0,0,0,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Optimization Score" FontSize="15" FontWeight="SemiBold" />
                        <TextBlock Text="How optimized is your system for gaming" FontSize="12" Opacity="0.6" />
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding OptimizationScore}" FontSize="36" FontWeight="Bold" Foreground="{StaticResource SonicAccentBrush}" />
                    <TextBlock Text="/100" FontSize="16" Opacity="0.5" VerticalAlignment="Bottom" Margin="4,0,0,8" />
                </StackPanel>
            </ui:CardControl>

            <!-- System Info Cards -->
            <TextBlock Text="System Information" FontSize="18" FontWeight="SemiBold" Margin="0,8,0,12" />

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Processor (CPU)" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding CpuName}" FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </ui:CardControl.Header>
                <TextBlock Text="{Binding CpuDetails}" FontSize="12" Opacity="0.6" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Graphics (GPU)" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding GpuName}" FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </ui:CardControl.Header>
                <TextBlock Text="{Binding GpuDetails}" FontSize="12" Opacity="0.6" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Memory (RAM)" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding RamInfo}" FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Memory16" FontSize="20" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Motherboard" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Motherboard}" FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Board24" FontSize="20" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Operating System" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding OsInfo}" FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Desktop24" FontSize="20" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Storage" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding StorageInfo}" FontSize="12" Opacity="0.7" TextWrapping="Wrap" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Storage24" FontSize="20" VerticalAlignment="Center" />
            </ui:CardControl>

        </StackPanel>
    </ScrollViewer>
</Page>
