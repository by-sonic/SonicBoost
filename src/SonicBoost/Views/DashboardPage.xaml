<Page
    x:Class="SonicBoost.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Главная"
    Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,28">
        <StackPanel MaxWidth="920">

            <!-- SonicVPN Banner -->
            <Border
                CornerRadius="14"
                Padding="28,20"
                Margin="0,0,0,28"
                Cursor="Hand"
                MouseLeftButtonUp="SonicVpnBanner_Click">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1A237E" Offset="0" />
                        <GradientStop Color="#00695C" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.25" Color="#1E90FF" />
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SonicVPN" FontSize="22" FontWeight="Bold" Foreground="#00E5FF" />
                        <TextBlock Text="Защита соединения и низкий пинг. Подключение через Telegram-бота @bysonicvpn_bot" FontSize="13" Foreground="#B0BEC5" Margin="0,6,0,0" TextWrapping="Wrap" />
                    </StackPanel>
                    <ui:Button Grid.Column="1" Content="Перейти в Telegram" Appearance="Primary" VerticalAlignment="Center" Click="SonicVpnButton_Click" />
                </Grid>
            </Border>

            <!-- Optimization Score -->
            <ui:CardControl Margin="0,0,0,20" Padding="24,20">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Оценка оптимизации" FontSize="16" FontWeight="SemiBold" />
                        <TextBlock Text="Насколько система настроена для игр" FontSize="12" Foreground="#9EA7B8" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding OptimizationScore}" FontSize="40" FontWeight="Bold" Foreground="{StaticResource SonicAccentBrush}" />
                    <TextBlock Text="/100" FontSize="18" Foreground="#7A8494" VerticalAlignment="Bottom" Margin="6,0,0,10" />
                </StackPanel>
            </ui:CardControl>

            <!-- System Info Cards -->
            <TextBlock Text="Информация о системе" FontSize="19" FontWeight="SemiBold" Margin="0,10,0,14" />

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Процессор (CPU)" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding CpuName}" FontSize="12" Foreground="#B0B8C8" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <TextBlock Text="{Binding CpuDetails}" FontSize="12" Foreground="#9EA7B8" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Видеокарта (GPU)" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding GpuName}" FontSize="12" Foreground="#B0B8C8" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <TextBlock Text="{Binding GpuDetails}" FontSize="12" Foreground="#9EA7B8" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Память (RAM)" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding RamInfo}" FontSize="12" Foreground="#B0B8C8" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Memory16" FontSize="22" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Материнская плата" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Motherboard}" FontSize="12" Foreground="#B0B8C8" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Board24" FontSize="22" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Операционная система" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding OsInfo}" FontSize="12" Foreground="#B0B8C8" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Desktop24" FontSize="22" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Накопители" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding StorageInfo}" FontSize="12" Foreground="#B0B8C8" TextWrapping="Wrap" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Storage24" FontSize="22" VerticalAlignment="Center" />
            </ui:CardControl>

        </StackPanel>
    </ScrollViewer>
</Page>
