<Page
    x:Class="SonicBoost.Views.PrivacyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Privacy"
    Loaded="Page_Loaded">

    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Privacy &amp; Telemetry" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="Take control of your data and disable tracking" FontSize="13" Opacity="0.6" Margin="0,4,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Block Hosts" Margin="0,0,8,0" Command="{Binding BlockTelemetryHostsCommand}" />
                <ui:Button Content="Apply All" Appearance="Primary" Command="{Binding ApplyAllCommand}" />
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="900">
                <TextBlock Text="{Binding HostsStatus}" FontSize="12" Opacity="0.6" Margin="0,0,0,12" />

                <ItemsControl ItemsSource="{Binding Tweaks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:CardControl Margin="0,0,0,6">
                                <ui:CardControl.Header>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold" />
                                            <Border Margin="8,0,0,0" Padding="6,2" CornerRadius="4" Background="#33448AFF">
                                                <TextBlock Text="{Binding Category}" FontSize="10" />
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.6" TextWrapping="Wrap" Margin="0,2,0,0" />
                                    </StackPanel>
                                </ui:CardControl.Header>
                                <ToggleButton
                                    IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                    VerticalAlignment="Center" />
                            </ui:CardControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
