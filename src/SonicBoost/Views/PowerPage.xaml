<Page
    x:Class="SonicBoost.Views.PowerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Power Plan"
    Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,24">
        <StackPanel MaxWidth="900">
            <TextBlock Text="Power Plan" FontSize="22" FontWeight="Bold" />
            <TextBlock Text="Maximize CPU and GPU performance with optimized power settings" FontSize="13" Opacity="0.6" Margin="0,4,0,24" />

            <ui:CardControl Margin="0,0,0,12">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Current Plan" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding CurrentPlan}" FontSize="15" FontWeight="Bold" Foreground="{StaticResource SonicAccentBrush}" Margin="0,4,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Flash24" FontSize="24" VerticalAlignment="Center" />
            </ui:CardControl>

            <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,12" />

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Ultimate Performance" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="Maximum power plan with no power-saving throttling. Best for desktop gaming." FontSize="11" Opacity="0.6" TextWrapping="Wrap" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:Button Content="Activate" Appearance="Primary" Command="{Binding EnableUltimatePerformanceCommand}" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="High Performance" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="Strong performance with minimal power saving. Good balance for gaming laptops." FontSize="11" Opacity="0.6" TextWrapping="Wrap" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:Button Content="Activate" Command="{Binding SetHighPerformanceCommand}" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Disable Hibernation" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="Frees disk space used by hiberfil.sys and speeds up shutdown." FontSize="11" Opacity="0.6" TextWrapping="Wrap" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:Button Content="Disable" Command="{Binding DisableHibernationCommand}" VerticalAlignment="Center" />
            </ui:CardControl>

            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="{StaticResource SonicAccentBrush}" Margin="0,12,0,0" />

            <!-- Available Plans -->
            <TextBlock Text="Available Power Plans" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,12" />

            <ItemsControl ItemsSource="{Binding Plans}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,6">
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold" />
                                    <TextBlock Text=" (Active)" FontSize="12" Foreground="{StaticResource SonicAccentBrush}"
                                               Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock Text="{Binding Guid}" FontSize="10" Opacity="0.4" VerticalAlignment="Center" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Page>
