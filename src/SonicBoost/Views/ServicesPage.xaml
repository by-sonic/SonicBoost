<Page
    x:Class="SonicBoost.Views.ServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Services"
    Loaded="Page_Loaded">

    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Service Manager" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="Disable unnecessary Windows services to free resources" FontSize="13" Opacity="0.6" Margin="0,4,0,0" />
            </StackPanel>
            <ui:Button Content="Disable All Safe" Appearance="Primary" HorizontalAlignment="Right" Command="{Binding DisableAllSafeCommand}" />
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Services}" MaxWidth="900">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,6">
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayName}" FontSize="13" FontWeight="SemiBold" />
                                        <Border Margin="8,0,0,0" Padding="6,2" CornerRadius="4" Background="#33FFA000">
                                            <TextBlock Text="{Binding Category}" FontSize="10" />
                                        </Border>
                                        <Border Margin="4,0,0,0" Padding="6,2" CornerRadius="4" Background="#3300C853">
                                            <TextBlock Text="{Binding Status}" FontSize="10" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.6" TextWrapping="Wrap" Margin="0,2,0,0" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ToggleButton
                                IsChecked="{Binding IsDisabledByUser, Mode=TwoWay}"
                                VerticalAlignment="Center" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
