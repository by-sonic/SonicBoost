<Page
    x:Class="SonicBoost.Views.PowerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Электропитание"
    Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,28">
        <StackPanel MaxWidth="920">
            <TextBlock Text="План электропитания" FontSize="22" FontWeight="Bold" Foreground="#E8ECF2" />
            <TextBlock Text="Максимальная производительность CPU и GPU за счёт настроек питания" FontSize="13" Foreground="#9EA7B8" Margin="0,6,0,28" />

            <ui:CardControl Margin="0,0,0,14" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Текущий план" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                        <TextBlock Text="{Binding CurrentPlan}" FontSize="16" FontWeight="Bold" Foreground="{StaticResource SonicAccentBrush}" Margin="0,6,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Flash24" FontSize="26" VerticalAlignment="Center" />
            </ui:CardControl>

            <TextBlock Text="Быстрые действия" FontSize="17" FontWeight="SemiBold" Margin="0,10,0,14" Foreground="#E8ECF2" />

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Максимальная производительность" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                        <TextBlock Text="План без энергосбережения и троттлинга. Оптимально для игр на ПК." FontSize="12" Foreground="#9EA7B8" TextWrapping="Wrap" Margin="0,4,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:Button Content="Включить" Appearance="Primary" Command="{Binding EnableUltimatePerformanceCommand}" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Высокая производительность" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                        <TextBlock Text="Высокая производительность с минимальным энергосбережением. Подходит для игровых ноутбуков." FontSize="12" Foreground="#9EA7B8" TextWrapping="Wrap" Margin="0,4,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:Button Content="Включить" Command="{Binding SetHighPerformanceCommand}" VerticalAlignment="Center" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Отключить гибернацию" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                        <TextBlock Text="Освобождает место на диске (hiberfil.sys) и ускоряет завершение работы." FontSize="12" Foreground="#9EA7B8" TextWrapping="Wrap" Margin="0,4,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:Button Content="Отключить" Command="{Binding DisableHibernationCommand}" VerticalAlignment="Center" />
            </ui:CardControl>

            <Border CornerRadius="8" Padding="14,10" Margin="0,14,0,0"
                    Background="{Binding IsError, Converter={StaticResource ErrorToStatusBackgroundConverter}}"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock Text="{Binding StatusMessage}" FontSize="13"
                           Foreground="{Binding IsError, Converter={StaticResource ErrorToStatusForegroundConverter}}" />
            </Border>

            <!-- Available Plans -->
            <TextBlock Text="Доступные планы питания" FontSize="17" FontWeight="SemiBold" Margin="0,24,0,14" Foreground="#E8ECF2" />

            <ItemsControl ItemsSource="{Binding Plans}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                                    <TextBlock Text=" (активен)" FontSize="12" Foreground="{StaticResource SonicAccentBrush}"
                                               Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock Text="{Binding Guid}" FontSize="11" Foreground="#7A8494" VerticalAlignment="Center" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Page>
