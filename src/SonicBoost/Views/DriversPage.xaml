<Page
    x:Class="SonicBoost.Views.DriversPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Драйверы"
    Loaded="Page_Loaded">

    <Grid Margin="40,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Драйверы" FontSize="22" FontWeight="Bold" Foreground="#E8ECF2" />
            <TextBlock Text="Определение оборудования и загрузка актуальных драйверов" FontSize="13" Foreground="#9EA7B8" Margin="0,6,0,0" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Recommendations}" MaxWidth="920">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Padding="8,4" CornerRadius="6" Background="#331E90FF" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Category}" FontSize="11" FontWeight="SemiBold" Foreground="#1E90FF" />
                                        </Border>
                                        <TextBlock Text="{Binding Vendor}" FontSize="13" FontWeight="SemiBold" Foreground="#C8D0E0" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding DeviceName}" FontSize="14" FontWeight="SemiBold" Margin="0,6,0,0" Foreground="#E8ECF2" />
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#9EA7B8" Margin="0,4,0,0" />
                                    <TextBlock Text="{Binding CurrentVersion, StringFormat='Текущая версия: {0}'}" FontSize="11" Foreground="#7A8494" Margin="0,4,0,0"
                                               Visibility="{Binding CurrentVersion, Converter={StaticResource StringToVisibilityConverter}}" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ui:Button
                                Content="Скачать"
                                Appearance="Primary"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.OpenDownloadUrlCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding DownloadUrl}" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
