<Page
    x:Class="SonicBoost.Views.PrivacyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Конфиденциальность"
    Loaded="Page_Loaded">

    <Grid Margin="40,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Конфиденциальность и телеметрия" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="Контроль над данными и отключение отслеживания" FontSize="13" Foreground="#9EA7B8" Margin="0,6,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Заблокировать хосты" Margin="0,0,10,0" Command="{Binding BlockTelemetryHostsCommand}" />
                <ui:Button Content="Применить все" Appearance="Primary" Command="{Binding ApplyAllCommand}" />
            </StackPanel>
        </DockPanel>

        <!-- Status Bar -->
        <Border Grid.Row="1" CornerRadius="8" Padding="14,10" Margin="0,0,0,14"
                Background="#1A1E90FF"
                Visibility="{Binding HostsStatus, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding HostsStatus}" FontSize="13" Foreground="#80CAFF" />
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="920">

                <ItemsControl ItemsSource="{Binding Tweaks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                                <ui:CardControl.Header>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" />
                                            <Border Margin="10,0,0,0" Padding="8,4" CornerRadius="6" Background="#33448AFF">
                                                <TextBlock Text="{Binding Category}" FontSize="11" />
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#9EA7B8" TextWrapping="Wrap" Margin="0,6,0,0" />
                                    </StackPanel>
                                </ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Padding="8,4" CornerRadius="6" Margin="0,0,10,0"
                                            Background="{Binding IsEnabled, Converter={StaticResource BoolToStatusBrushConverter}}">
                                        <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BoolToStatusTextConverter}}" 
                                                   FontSize="11" FontWeight="SemiBold" Foreground="#EAEAEA" />
                                    </Border>
                                    <ToggleButton IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                                </StackPanel>
                            </ui:CardControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
