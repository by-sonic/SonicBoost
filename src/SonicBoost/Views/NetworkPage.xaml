<Page
    x:Class="SonicBoost.Views.NetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Сеть"
    Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,28">
        <StackPanel MaxWidth="920">
            <TextBlock Text="Оптимизация сети" FontSize="22" FontWeight="Bold" Foreground="#E8ECF2" />
            <TextBlock Text="Снижение пинга и настройка сети для игр" FontSize="13" Foreground="#9EA7B8" Margin="0,6,0,28" />

            <!-- Network Tweaks -->
            <ItemsControl ItemsSource="{Binding Tweaks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#9EA7B8" TextWrapping="Wrap" Margin="0,6,0,0" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Padding="8,4" CornerRadius="6" Margin="0,0,10,0"
                                        Background="{Binding IsEnabled, Converter={StaticResource BoolToStatusBrushConverter}}">
                                    <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BoolToStatusTextConverter}}" 
                                               FontSize="11" FontWeight="SemiBold" Foreground="#EAEAEA" />
                                </Border>
                                <ToggleButton IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- DNS Section -->
            <TextBlock Text="Настройка DNS" FontSize="17" FontWeight="SemiBold" Margin="0,24,0,14" Foreground="#E8ECF2" />

            <ui:CardControl Margin="0,0,0,12" Padding="20,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Быстрый DNS" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                        <TextBlock Text="Установка быстрого DNS для снижения задержки" FontSize="12" Foreground="#9EA7B8" Margin="0,2,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ComboBox
                        ItemsSource="{Binding DnsPresets}"
                        DisplayMemberPath="Name"
                        SelectedItem="{Binding SelectedDns}"
                        Width="160"
                        Margin="0,0,10,0" />
                    <ui:Button Content="Применить DNS" Appearance="Primary" Command="{Binding ApplyDnsCommand}" />
                </StackPanel>
            </ui:CardControl>

            <Border CornerRadius="8" Padding="14,10" Margin="0,10,0,0"
                    Background="{Binding IsError, Converter={StaticResource ErrorToStatusBackgroundConverter}}"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock Text="{Binding StatusMessage}" FontSize="13"
                           Foreground="{Binding IsError, Converter={StaticResource ErrorToStatusForegroundConverter}}" />
            </Border>

            <!-- SonicVPN Block -->
            <Border
                Margin="0,28,0,0"
                CornerRadius="14"
                Padding="24,20"
                Cursor="Hand"
                MouseLeftButtonUp="SonicVpnBlock_Click">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0D47A1" Offset="0" />
                        <GradientStop Color="#00796B" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#00E5FF" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="SonicVPN" FontSize="20" FontWeight="Bold" Foreground="#00E5FF" />
                    <TextBlock Text="Низкий пинг и защита соединения. Подключение через Telegram-бота @bysonicvpn_bot" FontSize="13" Foreground="#B0BEC5" TextWrapping="Wrap" Margin="0,8,0,12" />
                    <ui:Button Content="Перейти в Telegram" Appearance="Primary" Click="SonicVpnButton_Click" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
