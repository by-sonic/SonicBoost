<Page
    x:Class="SonicBoost.Views.NetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Network"
    Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,24">
        <StackPanel MaxWidth="900">
            <TextBlock Text="Network Optimization" FontSize="22" FontWeight="Bold" />
            <TextBlock Text="Reduce ping and optimize network for gaming" FontSize="13" Opacity="0.6" Margin="0,4,0,24" />

            <!-- Network Tweaks -->
            <ItemsControl ItemsSource="{Binding Tweaks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,6">
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.6" TextWrapping="Wrap" Margin="0,2,0,0" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ToggleButton IsChecked="{Binding IsEnabled, Mode=TwoWay}" VerticalAlignment="Center" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- DNS Section -->
            <TextBlock Text="DNS Configuration" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,12" />

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Fast DNS Provider" FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="Set a fast DNS for lower latency" FontSize="11" Opacity="0.6" />
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ComboBox
                        ItemsSource="{Binding DnsPresets}"
                        DisplayMemberPath="Name"
                        SelectedItem="{Binding SelectedDns}"
                        Width="140"
                        Margin="0,0,8,0" />
                    <ui:Button Content="Apply DNS" Appearance="Primary" Command="{Binding ApplyDnsCommand}" />
                </StackPanel>
            </ui:CardControl>

            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Opacity="0.6" Margin="0,8,0,0" />

            <!-- SonicVPN Integration -->
            <Border
                Margin="0,24,0,0"
                CornerRadius="12"
                Padding="20,16"
                Cursor="Hand"
                MouseLeftButtonUp="SonicVpnBlock_Click">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0D47A1" Offset="0" />
                        <GradientStop Color="#00796B" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="SonicVPN" FontSize="18" FontWeight="Bold" Foreground="#00E5FF" />
                    <TextBlock Text="Optimize your ping AND protect your connection. SonicVPN provides gaming-optimized servers with minimal latency impact." FontSize="12" Foreground="#B0BEC5" TextWrapping="Wrap" Margin="0,6,0,8" />
                    <ui:Button Content="Try SonicVPN" Appearance="Primary" Click="SonicVpnButton_Click" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
