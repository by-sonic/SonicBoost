<Page
    x:Class="SonicBoost.Views.TweaksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Игровые твики"
    Loaded="Page_Loaded">

    <Grid Margin="40,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Игровые твики" FontSize="22" FontWeight="Bold" Foreground="#E8ECF2" />
                <TextBlock Text="Оптимизация Windows для максимальной производительности в играх" FontSize="13" Foreground="#9EA7B8" Margin="0,6,0,0" />
            </StackPanel>
            <ui:Button Content="Применить все" Appearance="Primary" HorizontalAlignment="Right" Command="{Binding ApplyAllCommand}" />
        </DockPanel>

        <!-- Status Bar -->
        <Border Grid.Row="1" CornerRadius="8" Padding="14,10" Margin="0,0,0,14"
                Background="{Binding IsError, Converter={StaticResource ErrorToStatusBackgroundConverter}}"
                Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding StatusMessage}" FontSize="13"
                       Foreground="{Binding IsError, Converter={StaticResource ErrorToStatusForegroundConverter}}" />
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tweaks}" MaxWidth="920">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="#E8ECF2" />
                                        <Border
                                            Margin="10,0,0,0"
                                            Padding="8,4"
                                            CornerRadius="6"
                                            Background="{Binding Risk, Converter={StaticResource RiskToBrushConverter}}"
                                            Visibility="{Binding Risk, Converter={StaticResource RiskToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Risk, Converter={StaticResource RiskToRussianConverter}}" FontSize="11" Foreground="#E8ECF2" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#9EA7B8" TextWrapping="Wrap" Margin="0,6,0,0" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Padding="8,4" CornerRadius="6" Margin="0,0,10,0"
                                        Background="{Binding IsEnabled, Converter={StaticResource BoolToStatusBrushConverter}}">
                                    <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BoolToStatusTextConverter}}" 
                                               FontSize="11" FontWeight="SemiBold" Foreground="#EAEAEA" />
                                </Border>
                                <ToggleButton IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
