<Page
    x:Class="SonicBoost.Views.DebloatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Очистка"
    Loaded="Page_Loaded">

    <Grid Margin="40,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Очистка системы" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="Удаление предустановленных приложений и очистка временных файлов" FontSize="13" Foreground="#9EA7B8" Margin="0,6,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Очистить временные файлы" Margin="0,0,10,0" Command="{Binding CleanTempFilesCommand}" />
                <ui:Button Content="Выбрать все" Margin="0,0,10,0" Command="{Binding SelectAllCommand}" />
                <ui:Button Content="Удалить выбранные" Appearance="Danger" Command="{Binding RemoveSelectedCommand}" />
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1" CornerRadius="8" Padding="14,10" Margin="0,0,0,14"
                Background="{Binding IsError, Converter={StaticResource ErrorToStatusBackgroundConverter}}"
                Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding StatusMessage}" FontSize="13"
                       Foreground="{Binding IsError, Converter={StaticResource ErrorToStatusForegroundConverter}}" />
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Apps}" MaxWidth="920">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" FontSize="14" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#9EA7B8" Margin="0,2,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock Text="{Binding PackageName}" FontSize="11" Foreground="#7A8494" VerticalAlignment="Center" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
