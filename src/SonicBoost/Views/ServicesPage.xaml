<Page
    x:Class="SonicBoost.Views.ServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Службы"
    Loaded="Page_Loaded">

    <Grid Margin="40,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Управление службами" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="Отключение ненужных служб Windows для экономии ресурсов" FontSize="13" Foreground="#9EA7B8" Margin="0,6,0,0" />
            </StackPanel>
            <ui:Button Content="Отключить все безопасные" Appearance="Primary" HorizontalAlignment="Right" Command="{Binding DisableAllSafeCommand}" />
        </DockPanel>

        <!-- Status Bar -->
        <Border Grid.Row="1" CornerRadius="8" Padding="14,10" Margin="0,0,0,14"
                Background="{Binding IsError, Converter={StaticResource ErrorToStatusBackgroundConverter}}"
                Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding StatusMessage}" FontSize="13"
                       Foreground="{Binding IsError, Converter={StaticResource ErrorToStatusForegroundConverter}}" />
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Services}" MaxWidth="920">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,10" Padding="20,16">
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayName}" FontSize="14" FontWeight="SemiBold" />
                                        <Border Margin="10,0,0,0" Padding="8,4" CornerRadius="6" Background="#33FFA000">
                                            <TextBlock Text="{Binding Category}" FontSize="11" />
                                        </Border>
                                        <Border Margin="6,0,0,0" Padding="8,4" CornerRadius="6" Background="#3300C853">
                                            <TextBlock Text="{Binding Status, Converter={StaticResource ServiceStatusToRussianConverter}}" FontSize="11" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#9EA7B8" TextWrapping="Wrap" Margin="0,6,0,0" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Padding="8,4" CornerRadius="6" Margin="0,0,10,0"
                                        Background="{Binding IsDisabledByUser, Converter={StaticResource InverseBoolToStatusBrushConverter}}">
                                    <TextBlock Text="{Binding IsDisabledByUser, Converter={StaticResource InverseBoolToStatusTextConverter}}" 
                                               FontSize="11" FontWeight="SemiBold" Foreground="#EAEAEA" />
                                </Border>
                                <ToggleButton IsChecked="{Binding IsDisabledByUser, Mode=TwoWay}" />
                            </StackPanel>
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
