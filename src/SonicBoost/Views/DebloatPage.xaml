<Page
    x:Class="SonicBoost.Views.DebloatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Debloat"
    Loaded="Page_Loaded">

    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Debloat" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="Remove pre-installed apps and clean temporary files" FontSize="13" Opacity="0.6" Margin="0,4,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Clean Temp" Margin="0,0,8,0" Command="{Binding CleanTempFilesCommand}" />
                <ui:Button Content="Select All" Margin="0,0,8,0" Command="{Binding SelectAllCommand}" />
                <ui:Button Content="Remove Selected" Appearance="Danger" Command="{Binding RemoveSelectedCommand}" />
            </StackPanel>
        </DockPanel>

        <TextBlock Grid.Row="1" Text="{Binding StatusMessage}" FontSize="12" Opacity="0.6" Margin="0,0,0,12" />

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Apps}" MaxWidth="900">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,6">
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" FontSize="13" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.6" />
                                    </StackPanel>
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock Text="{Binding PackageName}" FontSize="10" Opacity="0.4" VerticalAlignment="Center" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
